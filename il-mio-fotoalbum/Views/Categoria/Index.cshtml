<div class="container mt-5">
    <div class="row mb-4">
        <div class="col text-center">
            <a href="@Url.Action("Create", "Categoria")" class="btn btn-primary btn-lg">Crea la categoria</a>
        </div>
    </div>

    @foreach (var categoria in Model)
    {
        <div class="row mb-3 categoria-item p-3 border rounded shadow-sm">
            <div class="col-md-10">
                <h3>@categoria.Nome</h3>
            </div>
            <div class="col-md-2 text-right">
                @if (User.IsInRole("ADMIN"))
                {
                    <form asp-controller="Categoria" asp-action="Delete" asp-route-id="@categoria.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm">
                            Elimina
                        </button>
                    </form>
                }
                
            </div>
        </div>
    }
</div>

<style>
    .categoria-item {
        background-color: #f8f9fa;
    }

    .categoria-item h3 {
        margin: 0;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-lg {
        padding: 10px 20px;
        font-size: 1.25rem;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 0.875rem;
    }

    .mt-5 {
        margin-top: 3rem;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

    .text-center {
        text-align: center;
    }

    .text-right {
        text-align: right;
    }

    .p-3 {
        padding: 1rem;
    }

    .border {
        border: 1px solid #dee2e6;
    }

    .rounded {
        border-radius: 0.25rem;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0, 0, 0, 0.075);
    }
</style>